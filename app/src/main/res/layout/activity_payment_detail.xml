<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_Beige"
    tools:context=".PaymentDetailActivity">

    <LinearLayout
        android:id="@+id/layout_payment_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewInvoice"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:cardBackgroundColor="@color/Another_Beige"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/judulHotelInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/viga"
                android:text="Hotel Name"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textColor="@color/Reddish_Purple"/>

            <LinearLayout
                android:id="@+id/layout_invoice_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@+id/judulInvoice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/bookedDateFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:foregroundGravity="center"
                    android:fontFamily="@font/viga"
                    android:text="Booked Date   :"
                    android:textAlignment="textStart"
                    android:textColor="@color/Skin_Tone"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/detailBookedDateFrom"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|end"
                    android:ems="10"
                    android:fontFamily="@font/viga"
                    android:text="Detail Booked Date"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Ash_Green_Blueish"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_invoice_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@+id/judulInvoice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/bookedDateTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:foregroundGravity="center"
                    android:fontFamily="@font/viga"
                    android:text="Booked Date   :"
                    android:textAlignment="textStart"
                    android:textColor="@color/Skin_Tone"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/detailBookedDateTo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|end"
                    android:ems="10"
                    android:fontFamily="@font/viga"
                    android:text="Detail Booked Date"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Ash_Green_Blueish"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_invoice_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="175dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@+id/judulInvoice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/bookedPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:foregroundGravity="center"
                    android:fontFamily="@font/viga"
                    android:text="Hotel Price       :"
                    android:textAlignment="textStart"
                    android:textColor="@color/Skin_Tone"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/detailBookedPrice"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|end"
                    android:ems="10"
                    android:fontFamily="@font/viga"
                    android:text="Detail Booked Price"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Green"
                    android:textSize="18sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/finalBookButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/Reddish_Purple"
                android:fontFamily="@font/viga"
                android:gravity="center"
                android:text="Yes, Book Now!"
                android:textAlignment="center"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cancelFinalBookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:fontFamily="@font/viga"
                android:text="Let me think about it."
                android:textColor="@color/Greyish_Blue"
                android:textAlignment="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>