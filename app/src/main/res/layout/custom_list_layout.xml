<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@color/Another_Beige"
    android:orientation="horizontal"
    android:padding="10dp"
    app:circularflow_radiusInDP="8dp">

    <ImageView
        android:id="@+id/room_icon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_margin="5dp"
        android:src="@drawable/contoh_hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/viga"
        android:text="Presidential Suite Crystal Hotel"
        android:textColor="@color/Ash_Green_Blueish"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/viga"
        android:text="Jl. Bintaro Raya No.12"
        android:textColor="@color/Ash_Green_Blueish"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toBottomOf="@+id/room_name" />

    <TextView
        android:id="@+id/room_price"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:background="@drawable/cute_bg"
        android:fontFamily="@font/viga"
        android:text="Rp. 250000"
        android:textAlignment="center"
        android:textColor="@color/Green"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toBottomOf="@+id/room_address" />

</androidx.constraintlayout.widget.ConstraintLayout>