<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/Neutral_Beige"
    tools:context=".DetailRoomActivity">

    <LinearLayout
        android:id="@+id/linLayJudulDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/judulDetailRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="48dp"
            android:layout_marginStart="20dp"
            android:foregroundGravity="center"
            android:fontFamily="@font/viga"
            android:text="Detail Room"
            android:textAlignment="textStart"
            android:textColor="@color/Reddish_Purple"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/linLayHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/finalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/viga"
                android:text="Hotel Name"
                android:textSize="35sp"
                android:textColor="@color/Ash_Green_Blueish"/>

            <TextView
                android:id="@+id/judulRatingDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/viga"
                android:text="Rating :"
                android:textColor="@color/Skin_Tone"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/finalRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/viga"
                android:text="3.0"
                android:textSize="14sp"
                android:textColor="@color/Skin_Tone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/finalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/viga"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="@color/Reddish_Purple"/>

        <TextView
            android:id="@+id/finalCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/viga"
            android:text="City"
            android:textSize="14sp"
            android:textColor="@color/Reddish_Purple"/>

        <TextView
            android:id="@+id/finalBedType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/viga"
            android:text="Bed Type"
            android:textSize="16sp"
            android:textColor="@color/Ash_Green_Blueish"/>

        <TextView
            android:id="@+id/finalSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/viga"
            android:text="Size"
            android:textSize="16sp"
            android:textColor="@color/Ash_Green_Blueish"/>

        <TextView
            android:id="@+id/finalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/viga"
            android:text="Price"
            android:textSize="16sp"
            android:textColor="@color/Ash_Green_Blueish"/>

        <TextView
            android:id="@+id/addFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/viga"
            android:text="Facility"
            android:textSize="18sp"
            android:textColor="@color/Ash_Green_Blueish"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="AC"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/refrigerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Refrigerator"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Wi-Fi"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/bathtub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Bathtub"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/balcony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Balcony"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Restaurant"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/pool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Swimming Pool"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/fitness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/viga"
                android:text="Fitness Center"
                android:textColor="@color/Reddish_Purple"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/contoh_hotel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>