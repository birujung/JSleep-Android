<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_Home"
    android:background="@drawable/gradient_list"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoFinal"
            android:layout_width="141dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/logo_icon_hotel" />

        <TextView
            android:id="@+id/judulAplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/viga"
            android:text="JSleep"
            android:textColor="@color/Reddish_Purple"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/Ash_Green_Blueish"
            android:fontFamily="@font/viga"
            android:text="LOGIN" />

        <TextView
            android:id="@+id/orDiHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/viga"
            android:text="OR"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/registerButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/Ash_Green_Blueish"
            android:fontFamily="@font/viga"
            android:text="REGISTER" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
