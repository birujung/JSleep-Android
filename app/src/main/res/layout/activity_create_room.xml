<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_Beige"
    tools:context=".CreateRoomActivity">

    <LinearLayout
        android:id="@+id/layout_create_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/judul_create_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="48dp"
            android:layout_marginStart="20dp"
            android:foregroundGravity="center"
            android:fontFamily="@font/viga"
            android:text="Create Room"
            android:textAlignment="textStart"
            android:textColor="@color/Reddish_Purple"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/linLayCreate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <EditText
                android:id="@+id/addName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/viga"
                android:hint="Input the Hotel Name"
                android:inputType="text"
                android:textColor="@color/Ash_Green_Blueish"
                android:textColorHint="@color/Skin_Tone"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/addPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:fontFamily="@font/viga"
                android:hint="Input the Price"
                android:inputType="text"
                android:textColor="@color/Ash_Green_Blueish"
                android:textColorHint="@color/Skin_Tone"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/addAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:fontFamily="@font/viga"
                android:hint="Input the Address"
                android:inputType="text"
                android:textColor="@color/Ash_Green_Blueish"
                android:textColorHint="@color/Skin_Tone"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/addSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:fontFamily="@font/viga"
                android:hint="Input the Size"
                android:inputType="text"
                android:textColor="@color/Ash_Green_Blueish"
                android:textColorHint="@color/Skin_Tone"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addFacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:fontFamily="@font/viga"
                android:text="Facility"
                android:textColor="@color/Ash_Green_Blueish"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="348dp"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:gravity="start"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="AC"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/refrigerator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Refrigerator"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Wi-Fi"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="348dp"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:gravity="start"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/bathtub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Bathtub"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/balcony"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Balcony"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Restaurant"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="348dp"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:gravity="start"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/pool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Swimming Pool"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/fitness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/viga"
                    android:text="Fitness Center"
                    android:textColor="@color/Reddish_Purple"
                    android:textSize="16sp"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cityTextView"
                    android:layout_width="77dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/viga"
                    android:text="Desired City"
                    android:textSize="16sp"
                    android:textColor="@color/Ash_Green_Blueish"/>

                <Spinner
                    android:id="@+id/citySpinner"
                    android:layout_width="146dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:backgroundTint="@color/Skin_Tone"
                    android:backgroundTintMode="screen"
                    android:popupBackground="@color/Skin_Tone"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bedTextView"
                    android:layout_width="77dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/viga"
                    android:text="Desired Bed"
                    android:textSize="16sp"
                    android:textColor="@color/Ash_Green_Blueish"/>

                <Spinner
                    android:id="@+id/bedSpinner"
                    android:layout_width="146dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:backgroundTint="@color/Skin_Tone"
                    android:backgroundTintMode="screen"
                    android:popupBackground="@color/Skin_Tone"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/createRoomButton"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:fontFamily="@font/viga"
                    android:text="Create"
                    android:textAlignment="center"
                    android:textColor="@color/Skin_Tone"
                    android:textSize="14sp"
                    android:backgroundTint="@color/Ash_Green_Blueish"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/cancelCreateRoomButton"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="57dp"
                    android:gravity="center"
                    android:fontFamily="@font/viga"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/Skin_Tone"
                    android:textSize="14sp"
                    android:backgroundTint="@color/Reddish_Purple"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>